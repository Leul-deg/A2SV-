class Solution:
    def hasAlternatingBits(self, n: int) -> bool:
        
        
        
        if n & 1:
            power = math.log((3*n/1 ) + 1 , 4)
            return power == int(power)
        
        
        
        power = math.log(1.5*n  + 1 , 4)
        return power == int(power)
            
    
